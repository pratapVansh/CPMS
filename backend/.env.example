# ============================================
# LOCAL DEVELOPMENT CONFIGURATION
# ============================================
# This file is for running backend locally with "npm run dev"
# For Docker, see root .env file

# Server
NODE_ENV=development
PORT=4000  # Local backend port (Docker uses 4001)

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/cpms  # Local PostgreSQL (Docker uses 5433)

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379  # Local Redis port (Docker uses 6380)
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:3000  # Local frontend URL

# Cloudinary (for file uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
